{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "factoryName": {
            "type": "string",
            "defaultValue": "CapStoneADF"
        },
        "adlsAccountName": {
            "type": "string",
            "defaultValue": "edapadls"
        },
        "principalId": {
            "type": "string"
        },
        "principalKey": {
            "type": "securestring"
        },
        "teamResourceGroupName" : {
            "type": "string",
            "defaultValue": "msq-hdinsight-team-a"
        },
        "sharedResourceGroupName" : {
            "type": "string",
            "defaultValue": "azure-training-shared"
        },
        "rawDir": {
            "type": "string",
            "defaultValue": "/data/raw"
        },
        "stgDir": {
            "type": "string",
            "defaultValue": "/data/stage"
        },
        "envName" : {
            "type": "string"
        },
        "hdiStandaloneUser": {
            "type": "string",
            "defaultValue": "admin"
        },
        "hdiStandalonePassword": {
            "type": "securestring"
        },
        "hcadSqlServer": {
            "type": "string",
            "defaultValue": "azt-sql.eastus.cloudapp.azure.com"
        },
        "hcadDbName": {
            "type": "string",
            "defaultValue": "hcadb"
        },
        "hcadDbUser": {
            "type": "string",
            "defaultValue": "aztuser"
        },
        "hcadDbPassword": {
            "type": "securestring"
        }
    },
    "variables": {
        "factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]",
        "adls-conn": "ADLSConnection",
        "hdi-conn-standalone": "HadoopConnection",
        "hdi-conn": "[variables('hdi-conn-standalone')]",
        "hdi-blob": "HDIStorageConnection",
        "adl-uri":"[concat( 'adl://', parameters('adlsAccountName'), '.azuredatalakestore.net') ]",
        "hcad-ext-dataset": "HcadSrcTable",
        "raw-data-dir": "[parameters('rawDir')]",
        "raw-avro-dataset": "ADLSRawAvroFile"
    },
    "resources": [
        {
            "name": "[concat(parameters('factoryName'), '/select-hcad-data')]",
            "type": "Microsoft.DataFactory/factories/pipelines",
            "apiVersion": "2017-09-01-preview",
            "properties": {
                "mode": "Incremental",
                "activities": [
                    {
                        "name": "CopySchema",
                        "type": "Copy",
                        "dependsOn": [],
                        "policy": {
                            "timeout": "7.00:00:00",
                            "retry": 0,
                            "retryIntervalInSeconds": 30
                        },
                        "typeProperties": {
                            "source": {
                                "type": "AzureDataLakeStoreSource"
                            },
                            "sink": {
                                "type": "AzureDataLakeStoreSink",
                                "recursive": false
                            }
                        },
                        "inputs": [
                            {
                                "referenceName": "[variables('raw-avro-dataset')]",
                                "type": "DatasetReference",
                                "parameters": {
                                    "FileName": "*",
                                    "FileExt" : "avsc",
                                    "FolderRoot": "[variables('raw-data-dir')]",
                                    "SOR": "hcad",
                                    "Env": "[parameters('envName')]",
                                    "Snapshot" : "@{pipeline().parameters.Snapshot}",
                                    "DataDir" : "@substring('dummy', 1, 0)"
                                }
                            }
                        ],
                        "outputs": [
                            {
                                "referenceName": "[variables('raw-avro-dataset')]",
                                "type": "DatasetReference",
                                "parameters": {
                                    "FileName": "@substring('dummy', 1, 0)",
                                    "FileExt" : "@substring('dummy', 1, 0)",
                                    "FolderRoot": "[variables('raw-data-dir')]",
                                    "SOR": "hcad",
                                    "Env": "[parameters('envName')]",
                                    "Snapshot" : "@{pipeline().parameters.Snapshot}",
                                    "DataDir" : "@substring('dummy', 1, 0)"
                                }
                            }
                        ]
                    },
                    {
                        "name": "Select-All-HCAD",
                        "description": "description",
                        "type": "HDInsightHive",
                        "linkedServiceName": {
                            "referenceName": "[variables('hdi-conn')]",
                            "type": "LinkedServiceReference"
                        },
                        "typeProperties": {
                            "scriptPath": "scripts/select/hcad-all.hql",
                            "scriptLinkedService": {
                                "referenceName": "[variables('hdi-blob')]",
                                "type": "LinkedServiceReference"
                            },
                            "defines": {
                                "raw_dir": "@{pipeline().parameters.RawDir}/@{pipeline().parameters.Snapshot}",
                                "stg_dir": "@{pipeline().parameters.StgDir}/@{pipeline().parameters.Snapshot}"
                            },
                            "getDebugInfo": "Failure"
                        }   
                    }
                ],
                "parameters": {
                    "Snapshot": {
                        "type": "String",
                        "defaultValue": ""
                    },
                    "RawDir": {
                        "type": "String",
                        "defaultValue": "[concat(variables('adl-uri'), parameters('rawDir'), '/', parameters('envName'), '/hcad/')]"
                    },
                    "StgDir": {
                        "type": "String",
                        "defaultValue": "[concat(variables('adl-uri'), parameters('stgDir'), '/', parameters('envName'))]"
                    }
                }
            }
        }
    ]
}        
